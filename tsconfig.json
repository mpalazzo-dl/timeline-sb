{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@aces/config": ["./src/aces.config.ts"],
      "@aces/base": ["./src/libs/base"],
      "@aces/cf": ["./src/libs/cf/index.ts"],
      "@aces/contentful": ["./src/libs/clients/contentful"],
      "@aces/features": ["./src/libs/features"],
      "@aces/fragments": ["./src/libs/fragments"],
      "@aces/hooks": ["./src/libs/hooks"],
      "@aces/i18n": ["./src/libs/i18n"],
      "@aces/routing": ["./src/libs/routing"],
      "@aces/store": ["./src/libs/store"],
      "@aces/theme": ["./src/libs/theme"],
      "@aces/types": ["./src/libs/types"],
      "@aces/ui": ["./src/libs/ui"],
      "@aces/utils": ["./src/libs/utils"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "src/stories"]
}
